@model IEnumerable<Harmic.Models.TbProduct>

@{
	ViewData["Title"] = "Index";
	Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
	<!-- Content Header (Page header) -->
	<section class="content-header">
		<div class="container-fluid">
			<div class="row mb-2">
				<div class="col-sm-12">
					<h1>Simple Tables</h1>
				</div>
				<div class="col-sm-6">
					<ol class="breadcrumb float-sm-right">
						<li class="breadcrumb-item"><a href="#">Home</a></li>
						<li class="breadcrumb-item active">Simple Tables</li>
					</ol>
				</div>
			</div>
		</div><!-- /.container-fluid -->
	</section>

	<!-- Main content -->
	<section class="content">
		<div class="container-fluid">
			<div class="row">

				<div class="col-md-12">
					<div class="card">
						<div class="card-header">
							<h3 class="card-title">Quản lý menus</h3>

							<div class="card-tools">
								<p>
									<a asp-action="Create">Create New</a>
								</p>
							</div>
						</div>
						<!-- /.card-header -->
						<div class="card-body p-0">
							<table class="table">
								<thead>
									<tr>
										<th>STT</th>
										<th>Tiêu đề</th>
										<th>Danh mục</th>
										<th>Ảnh</th>
										<th>Giá</th>
										<th>Giá giảm</th>
										<th>Số lượng</th>
										<th>Sp mới</th>
										<th>Sao</th>
										<th>Hiện</th>
										<th></th>
									</tr>
								</thead>
								<tbody>
									@{
										int i = 1;
									}
									@foreach (var item in Model)
									{
										<tr>
											<td>@(i++)</td>
											<td>
												@Html.DisplayFor(modelItem => item.Title)
											</td>
											<td>
												@Html.DisplayFor(modelItem => item.CategoryProduct.Title)
											</td>

											<td>
												<img src="@Html.DisplayFor(modelItem => item.Image)" width="60" height="60" />
											</td>
											<td>
												@Html.DisplayFor(modelItem => item.Price)
											</td>
											<td>
												@Html.DisplayFor(modelItem => item.PriceSale)
											</td>
											<td>
												@Html.DisplayFor(modelItem => item.Quantity)
											</td>
											
											<td>
												@Html.DisplayFor(modelItem => item.IsNew)
											</td>
											<td>
												@Html.DisplayFor(modelItem => item.Star)
											</td>
											<td>
												@Html.DisplayFor(modelItem => item.IsActive)
											</td>


											<td>
												<a asp-action="Edit" asp-route-id="@item.ProductId">Edit</a> |
												<a asp-action="Details" asp-route-id="@item.ProductId">Details</a> |
												<a asp-action="Delete" asp-route-id="@item.ProductId">Delete</a>
											</td>
										</tr>
									}

								</tbody>
							</table>
						</div>
						<!-- /.card-body -->
					</div>
					<!-- /.card -->
					<!-- /.card-body -->
				</div>
				<!-- /.card -->
			</div>
			<!-- /.col -->
		</div>
		<!-- /.row -->
		<!-- /.row -->

	</section>
	<!-- /.content -->
</div>
<!-- /.content-wrapper -->
